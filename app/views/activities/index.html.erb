<%= render "shared/navbar" %>
<div class='container-index p-3 '>
  <div>
  <%= form_tag activities_path, method: :get do %>
    <div class='form-search'>
      <%= text_field_tag :query,
        params[:query],
        class: 'form-control',
        placeholder: '🔍 Search by sport or location'
      %>
